/* pages/detail/detail.wxss  # 优化后的样式 */
/* 新增以下代码 ▲▲▲ */
.container {
  padding-bottom: 40rpx; /* 留出底部间距 */
}
.container {
  scroll-behavior: smooth;/* 平滑滚动效果 */
}
/* 建议将内联样式迁移到WXSS??这样对吗 */
.section {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.section {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx; /* 关键：垂直间距 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  overflow: hidden; /* 保证圆角效果 */

}

/* A1区图片高度自适应 */
.a1 image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
}

/* A2/A4区标题 */
.title-tag {
  width: 12rpx;
  height: 40rpx;
  border-radius: 4rpx;
  margin-right: 20rpx;
  display: inline-block;
  vertical-align: middle;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #0c6e04;
}
/* 标题标记样式 */
.title-marker {
  width: 8rpx;
  height: 36rpx;
  margin-right: 20rpx;
  display: inline-block;
  vertical-align: middle;
}

/* A3区特征标签 */
.a3 {
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.feature-tag {
  padding: 16rpx 24rpx;
  margin: 10rpx;
  background: #f0f2f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #2d3436;
  display: inline-block;
}


/* A5区富文本 */
.a5 {
  padding: 40rpx 30rpx; /* 增大内边距 */
}
.rich-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #4a5568;
}
/* A新增111 */
.rich-content view {
  margin: 20rpx 0;
}

.rich-content img {
  width: 80%;
  margin: 30rpx 0;
  border-radius: 8rpx;
}
/* 添加这些样式 */
.rich-text {
  line-height: 1.8;
}

.title {
  font-size: 38rpx;
  color: #2c3e50;
  margin: 40rpx 0 20rpx;
  font-weight: bold;
}

.warning {
  background: #fff3e0;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 6rpx solid #f5a623;
  margin: 20rpx 0;
}

.highlight {
  color: #4a90e2;
  font-weight: bold;
}