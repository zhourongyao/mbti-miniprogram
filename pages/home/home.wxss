/* A区：轮播图 */
.banner {
  height: 340rpx;
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}
.banner image {
  width: 100%;
  height: 100%;
}

/* B区：滚动条 */
.marquee {
  background: #fd9f9f;
  padding: 20rpx;
  margin: 20rpx 0;
  white-space: nowrap;
  overflow: hidden;
}
.marquee-text {
  font-size: 28rpx;
  color: rgb(0, 0, 0);
  display: inline-block;
  animation: marquee 15s linear infinite;
}

@keyframes marquee {
  0% { transform: translateX(100%); }
  100% { transform: translateX(-100%); }
}

/* C区：按钮组 */
.btn-group {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}
.btn {
  width: 48%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
}
.btn1 {
  background: #051527;
  color: white;
}
.btn2 {
  background: rgb(252, 249, 249);
  color: #890aff00;
  border: 2rpx solid #ff000000;
}

/* D区：测试入口 */
.grid-title {
  font-size: 36rpx;
  color: #333;
  padding: 20rpx;
  font-weight: bold;
}
.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}
.grid-item {
  background: rgb(225, 212, 236);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  padding: 20rpx;
  text-align: center;
}
.grid-item image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
}
.grid-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

/* E区：文档区 */
.doc-area {
  padding: 30rpx;
  margin: 40rpx 20rpx;
  background: rgb(210, 203, 221);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}