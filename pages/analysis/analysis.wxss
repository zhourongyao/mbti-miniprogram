/* pages/analysis/analysis.wxss */
.container {
  background: transparent !important;
}
/* 容器样式 */
.container {
  background: transparent !important;
  padding: 40rpx;
}

.type-group {
  background: rgba(255,255,255,0.8) !important; /* 半透明白色背景 */
}

/* 分组标题 */
.type-group {
  margin-bottom: 40rpx;
}
.group-title {
  font-size: 36rpx;
  color: rgb(0, 0, 0);
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}
.color-tag {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

/* 类型网格 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 双列布局 */
  gap: 20rpx;
}
.type-item {
  background: rgba(255, 255, 255, 0);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(214, 126, 214, 0.877);
}
.type-item image {
  width: 100%;
  height: 300rpx; /* 固定图片高度 */
}
.type-item text {
  display: block;
  padding: 20rpx;
  font-size: 32rpx;
  text-align: center;
}
.type-group {
  background: rgba(252, 252, 252, 0.959);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}
/* 类型网格容器 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  width: 100%;
  padding: 20rpx 0;
}

/* 单个类型项 */
.type-item {
  position: relative;
  background: rgba(255,255,255,0.9);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 类型图片 */
.type-image {
  width: 100%;
  height: 160rpx;
}

/* 类型名称 */
.type-name {
  display: block;
  padding: 16rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}